{
  "rootDir": "src",
  "exclude": ["dist"],
  "include": ["src/**/*"],

  "compilerOptions": {
    // Default
    "baseUrl": "src",
    "types": [
      "node",
      "jest",
      "@testing-library/jest-dom"
    ],
    "declaration": true,
    "declarationDir": "dist",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "sourceMap": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  }
}
