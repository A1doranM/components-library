{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "plugins": [
      {
        "name": "typescript-plugin-css-modules"
      }
    ],
    "typeRoots": [
      "node_modules/@types",
      "src/types"
    ],
    "jsx": "react",
    "module": "ESNext",
    "allowJs": true,
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "declarationDir": "./types",
    "emitDeclarationOnly": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src"
  ]
}
