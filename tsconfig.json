{
  "rootDir": "src",
  "exclude": ["dist"],
  "compilerOptions": {
    // Default
    "baseUrl": "src",
    "types": ["node", "jest", "@testing-library/jest-dom"],
    "target": "es5",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,

    // Added
    "jsx": "react",
    "module": "ESNext",
    "outDir": "dist",
    "declaration": true,
    "declarationDir": ".",
    "sourceMap": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": true
  }
}
